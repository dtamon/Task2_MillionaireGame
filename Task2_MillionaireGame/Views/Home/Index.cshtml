@model Task2_MillionaireGame.Models.GameViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <h1>
                <label for="Level" name="Level">You are now playing for @Model.Level</label>
                <input type="hidden" value=@Model.Level />
            </h1>
            <h2>
                <label for="Question" name="Question">@Model.Question.Content?</label>
            </h2>
            <br />
            <div class="row-cols-lg-4">
                <button type="submit" class="btn btn-info" id="AnswerA" value=@Model.AnswerD name="answer">@Model.AnswerA.IsCorrect</button>
            </div>
            <br />
            <div class="row-cols-lg-4">
                <button type="submit" class="btn btn-info" id="AnswerC" value=@Model.AnswerD name="answer">@Model.AnswerB.IsCorrect</button>
            </div>
            <br />
            <div class="row-cols-lg-4">
                <button type="submit" class="btn btn-info" id="AnswerC" value=@Model.AnswerD name="answer">@Model.AnswerC.IsCorrect</button>
            </div>
            <br />
            <div class="row-cols-lg-4">
                <button type="submit" class="btn btn-info" id="AnswerD" value=@Model.AnswerD name="answer">@Model.AnswerD.IsCorrect</button>
            </div>
            <br />
            <div class="row-cols-lg-4">
                <button type="submit" class="btn btn-danger" id="stop" value="stop" name="stop">Take Money!</button>
            </div>
        }
    </div>
</div>
